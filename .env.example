# Database Configuration
DATABASE_URL=postgresql://vpbank_user:vpbank_password@localhost:5432/vpbank_collateral

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d

# VPBank QLTS Integration
QLTS_API_URL=https://api.qlts.vpbank.com.vn
QLTS_API_KEY=your-qlts-api-key
QLTS_SYNC_INTERVAL=3600000

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@vpbank.com.vn
SMTP_PASS=your-email-password

# Analytics Configuration
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
ANALYTICS_BATCH_SIZE=100

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration (if using Redis)
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Asset Image Configuration
IMAGE_BASE_URL=https://assets.vpbank.com.vn
PLACEHOLDER_IMAGE_URL=https://assets.vpbank.com.vn/placeholder.jpg